<UserControl x:Class="MVVM_Event_Bubble_in_multilevel_miewmodel.GrandChield1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Event_Bubble_in_multilevel_miewmodel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="GreenYellow" Margin="35">
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>

        <TextBlock  Text="A button in GrandChild 1" Grid.RowSpan="2"></TextBlock>
        <Button Grid.Row="1" Content="100 shades of Red" Command="{Binding ChangeColorCommand}" Grid.RowSpan="2"></Button>
    </Grid>
</UserControl>
