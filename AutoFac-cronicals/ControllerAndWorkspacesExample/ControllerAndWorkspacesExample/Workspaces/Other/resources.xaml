                    mc:Ignorable="d"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:another="clr-namespace:controllerAndWorkspacesExample.Workspaces.Another">

    <DataTemplate x:Key="ViewTemplate" d:DataContext="{d:DesignInstance another:ViewModel}">

        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="300"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="Red"
                    VerticalAlignment="Stretch">
            </Border>
            
        </Grid>
        
    </DataTemplate>
    
</ResourceDictionary>