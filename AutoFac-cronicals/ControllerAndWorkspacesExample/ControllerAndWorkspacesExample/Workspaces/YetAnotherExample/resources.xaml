<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:yetAnotherExample="clr-namespace:ControllerAndWorkspacesExample.Workspaces.YetAnotherExample">

    <DataTemplate x:Key="YetAnotherExampleViewTemplate">

        <Grid d:DataContext="{d:DesignInstance yetAnotherExample:YetAnotherExampleViewModel}"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            
            <Border Background="DarkOrange"
                    VerticalAlignment="Stretch">
                <TextBlock Text="This is yet another example workspace"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontSize="16"
                           FontStyle="Italic"/>
            </Border>
            
        </Grid>
        
    </DataTemplate>
    
</ResourceDictionary>